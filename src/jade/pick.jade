- var page = 'start'
mixin card(img, title)
    .start_card
        .start_card_img
            img(src="//unsplash.it/212/148", alt=title)
            .start_card_actions
                a(href="./video.html")
                    img(src="./img/icons/check.svg", alt="Select")
                a(href="./zoom.html")
                    img(src="./img/icons/zoom.svg", alt="Zoom")
        .start_card_title
            =title
doctype html
html(lang="ru")
    include includes/_head
    body
        main.wrap.wrap_start
            include includes/_header
            section.content.start
                .start_header.animated.fadeInDown
                    .header.header_medium
                        | Pick a card design.
                    .start_header_descr
                        | Christmas/New Year
                .start_container.animated.fadeInUp
                    .start_cards
                        +card
                        +card
                        +card
                        +card
                        +card
                        +card
                        +card
                        +card
                        +card
                        +card
                        +card
                        +card
            include includes/_footer